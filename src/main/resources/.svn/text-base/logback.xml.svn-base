<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration>
	<include resource="org/springframework/boot/logging/logback/base.xml"/>

	<appender name="hybridcloudAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>/var/log/hybridcloud/hybridcloud.log</file>
		<append>true</append>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>/var/log/hybridcloud/hybridcloud.%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{40} - %msg%n </pattern>
		</encoder>
	</appender>
	
	<appender name="errorAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>/var/log/hybridcloud/error.log</file>
		<append>true</append>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>/var/log/hybridcloud/error.%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} %thread %X{invokeNo} %logger{40} %msg%n</pattern>  
		</encoder>
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
	        <level>ERROR</level>  
	        <onMatch>ACCEPT</onMatch>  
	        <onMismatch>DENY</onMismatch>  
	    </filter>  
	</appender>
	
	<logger name="com.zte.vdirector" level="TRACE" additivity="false">
		<appender-ref ref="hybridcloudAppender" />
		<appender-ref ref="errorAppender" />  
		<!-- <appender-ref ref="CONSOLE" /> -->
	</logger>

	<logger name="com" level="ERROR">
		<appender-ref ref="hybridcloudAppender" />
		<appender-ref ref="errorAppender" />  
		<!-- <appender-ref ref="CONSOLE" /> -->
	</logger>

	<logger name="org" level="ERROR">
		<appender-ref ref="hybridcloudAppender" />
		<appender-ref ref="errorAppender" />  
		<!-- <appender-ref ref="CONSOLE" /> -->
	</logger>

	<logger name="net" level="ERROR">
		<appender-ref ref="hybridcloudAppender" />
		<appender-ref ref="errorAppender" />  
		<!-- <appender-ref ref="CONSOLE" /> -->
	</logger>

</configuration>